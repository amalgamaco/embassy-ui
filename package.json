{
  "name": "@amalgama/react-native-ui-kit",
  "version": "0.0.3",
  "description": "A set of UI components following Amalgama's Design System.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-ui-kit.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "NODE_ENV=test JEST_JUNIT_OUTPUT_DIR=reports TZ=UTC jest",
    "lint": "eslint src/ tests/ example/ web_example/ docs/",
    "typescript": "tsc --noEmit",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "web_example": "yarn --cwd web_example",
    "docs": "yarn --cwd docs",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn web_example && yarn docs && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://git.amalgama.co/amalgama/packages/npm/react-native-ui-kit.git",
  "author": "Mauro E. Bender <mauro@amalgama.co> (https://git.amalgama.co/mauro)",
  "license": "MIT",
  "bugs": {
    "url": "https://git.amalgama.co/amalgama/packages/npm/react-native-ui-kit.git/issues"
  },
  "homepage": "https://git.amalgama.co/amalgama/packages/npm/react-native-ui-kit.git#readme",
  "publishConfig": {
    "registry": "https://git.amalgama.co/api/v4/projects/982/packages/npm/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@testing-library/jest-native": "^4.0.4",
    "@testing-library/react-native": "^9.1.0",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.182",
    "@types/react": "17.0.2",
    "@types/react-native": "0.65",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "jest-junit": "^13.2.0",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "17.0.2",
    "react-native": "^0.65",
    "react-native-builder-bob": "^0.18.0",
    "react-native-svg": "^13.1.0",
    "react-test-renderer": "17.0.2",
    "release-it": "^14.2.2",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-svg": "*"
  },
  "resolutions": {
    "@types/react": "17.0.2",
    "@types/react-native": "0.65"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "./config/jest.setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/reports/coverage",
    "coveragePathIgnorePatterns": [
      "tests/support"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html",
      "text-summary",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testMatch": [
      "<rootDir>/tests/**/?(*.)(spec|test).(js|ts|jsx|tsx)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/dist/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "requireCleanWorkingDir": false,
      "requireUpstream": true,
      "commitMessage": "Release v${version}",
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --issue-url https://git.amalgama.co/amalgama/packages/npm/react-native-ui-kit/-/issues/{id} --merge-url https://git.amalgama.co/amalgama/packages/npm/react-native-ui-kit/-/merge_requests/{id} --commit-url https://git.amalgama.co/amalgama/packages/npm/react-native-ui-kit/-/commit/{id}"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    },
    "gitlab": {
      "release": true,
      "publish": true,
      "releaseName": "Release v${version}"
    },
    "npm": {
      "skipChecks": true
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 3,
    "trailingComma": "es5",
    "useTabs": true
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "immutable": "^4.1.0",
    "lodash": "^4.17.21",
    "react-native-svg": "^13.1.0"
  }
}
